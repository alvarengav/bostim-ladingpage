# Editor configuration, see https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
semi = false
quote_type = single
trailing_comma = none
bracket_spacing = true
arrow_parens = avoid
end_of_line = auto
insert_final_newline = true
charset = utf-8

[*.astro]
quote_type = single
parser = astro

